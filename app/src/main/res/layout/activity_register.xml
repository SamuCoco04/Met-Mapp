<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/dark_background">

    <!-- Cabecera -->
    <LinearLayout
        android:id="@+id/headerRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivLogoRegister"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_cloud"
            android:tint="@color/primary_green"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tvAppNameRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Meteo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text" />
    </LinearLayout>

    <!-- Tarjeta -->
    <ScrollView
        android:id="@+id/scrollRegister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerRegister"
        app:layout_constraintBottom_toTopOf="@id/tvGoToLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card_rounded">

            <TextView
                android:id="@+id/tvTitleRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear cuenta"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvSubtitleRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Configura tu acceso a Meteo"
                android:textSize="14sp"
                android:textColor="@color/secondary_text" />

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvLabelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nombre"
                android:textSize="13sp"
                android:textColor="@color/secondary_text" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:hint="Tu nombre"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary_text"
                android:background="@drawable/bg_input"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/tvLabelEmailRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email"
                android:textSize="13sp"
                android:textColor="@color/secondary_text" />

            <EditText
                android:id="@+id/etEmailRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:hint="ejemplo@correo.com"
                android:inputType="textEmailAddress"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary_text"
                android:background="@drawable/bg_input"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- Password -->
            <TextView
                android:id="@+id/tvLabelPassRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Contraseña"
                android:textSize="13sp"
                android:textColor="@color/secondary_text" />

            <EditText
                android:id="@+id/etPasswordRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:hint="••••••••"
                android:inputType="textPassword"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary_text"
                android:background="@drawable/bg_input"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- Confirmar password -->
            <TextView
                android:id="@+id/tvLabelPassConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Repite contraseña"
                android:textSize="13sp"
                android:textColor="@color/secondary_text" />

            <EditText
                android:id="@+id/etPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:hint="••••••••"
                android:inputType="textPassword"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary_text"
                android:background="@drawable/bg_input"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- Botón crear cuenta -->
            <Button
                android:id="@+id/btnCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:text="Crear cuenta"
                android:textAllCaps="false"
                android:textColor="@color/dark_on_primary"
                android:backgroundTint="@color/primary_green" />

        </LinearLayout>
    </ScrollView>

    <!-- Enlace volver a login -->
    <TextView
        android:id="@+id/tvGoToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Ya tienes cuenta? Inicia sesión"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
