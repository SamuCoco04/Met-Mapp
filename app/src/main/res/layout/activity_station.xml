<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Tarjeta última lectura -->
        <LinearLayout
            android:id="@+id/cardLastReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#001a0d"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvCardTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- °C"
                android:textColor="#00FF00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCardHum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- %"
                android:textColor="#77FF77"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCardParticles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#99FF99"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCardTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Spinner modo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinnerMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Spinner variable (solo estadísticas) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variable:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinnerVariable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Sección ESTADÍSTICAS -->
        <LinearLayout
            android:id="@+id/layoutStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStatsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estadísticas"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvStatsEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay datos para esta variable"
                android:textColor="#AAAAAA"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layoutStatsCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- Sección GRÁFICAS -->
        <LinearLayout
            android:id="@+id/layoutCharts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Variables a dibujar:"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/cbTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperatura"
                    android:textColor="#FFFFFF"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/cbHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humedad"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="12dp"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/cbParticles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partículas"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvChartEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona alguna variable para dibujar"
                android:textColor="#AAAAAA"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
