<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Meteo" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Color principal -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryContainer">@color/dark_card</item>
        <item name="colorOnPrimary">@color/dark_on_primary</item>

        <!-- Color secundario / acento -->
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorOnSecondary">@color/dark_on_primary</item>

        <!-- Fondo general -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_card</item>
        <item name="colorOnSurface">@color/primary_text</item>

        <!-- Status bar / nav bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>

        <!-- Opcional: fuente, etc. -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

</resources>
